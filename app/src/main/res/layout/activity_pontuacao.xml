<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Nome do Jogador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtJogador" android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            android:layout_marginTop="200dp" app:layout_constraintTop_toTopOf="parent" android:textSize="20sp"/>
    <TextView
            android:text="Pontuação Marcada"
            android:background="@drawable/borda"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/txtPontuacao" android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp" android:textSize="30sp"
            android:textColor="@android:color/background_dark" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txtJogador"/>
    <Button
            android:text="Ok"
            android:layout_height="wrap_content"
            android:id="@+id/btnOk" android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/txtPontuacao"
            android:background="#00BFFF" android:textStyle="bold" android:layout_width="wrap_content"
            app:layout_constraintHorizontal_bias="0.497"/>
</android.support.constraint.ConstraintLayout>