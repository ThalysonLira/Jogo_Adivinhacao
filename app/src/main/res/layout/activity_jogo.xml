            android:layout_marginStart="20dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" android:textColor="@android:color/background_dark"/>
    <TextView
            android:text="Nome Jogador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtJogador" app:layout_constraintStart_toEndOf="@+id/textView5"
