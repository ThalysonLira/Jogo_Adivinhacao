<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Nível I"
            android:background="#00BFFF	"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/btnNivel1" android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:layout_marginTop="150dp" app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"/>
    <Button
            android:text="Nível II"
            android:background="#FF8C00"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/btnNivel2"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/btnNivel1" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toTopOf="@+id/btnNivel3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:textStyle="bold"/>
    <Button
            android:text="Nível III"
            android:background="#DC143C"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnNivel3" android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:layout_marginBottom="150dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"/>
    <TextView
            android:text="Jogo de adivinhação"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>